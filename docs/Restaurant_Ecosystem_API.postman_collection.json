{
  "info": {
    "name": "Restaurant Ecosystem API",
    "description": "Complete API collection for Restaurant Ecosystem including Auth, Menu, Orders, Payments, and Loyalty",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001/api/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"Password123!\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phone\": \"+1234567890\"\n}"
            },
            "url": {"raw": "http://localhost:3001/api/v1/auth/register", "host": ["http://localhost:3001/api/v1"], "path": ["auth", "register"]}
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"token\", jsonData.data.token);"]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {"raw": "http://localhost:3001/api/v1/auth/login", "host": ["http://localhost:3001/api/v1"], "path": ["auth", "login"]}
          }
        }
      ]
    },
    {
      "name": "Menu",
      "item": [
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "url": {"raw": "http://localhost:3001/api/v1/menu/categories", "host": ["http://localhost:3001/api/v1"], "path": ["menu", "categories"]}
          }
        },
        {
          "name": "Get Items",
          "request": {
            "method": "GET",
            "url": {"raw": "http://localhost:3001/api/v1/menu/items", "host": ["http://localhost:3001/api/v1"], "path": ["menu", "items"]}
          }
        },
        {
          "name": "Get Item by ID",
          "request": {
            "method": "GET",
            "url": {"raw": "http://localhost:3001/api/v1/menu/items/:id", "host": ["http://localhost:3001/api/v1"], "path": ["menu", "items", ":id"], "variable": [{"key": "id", "value": "item-id-here"}]}
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"locationId\": \"location-id\",\n  \"orderType\": \"PICKUP\",\n  \"items\": [\n    {\n      \"itemId\": \"item-id\",\n      \"quantity\": 2,\n      \"unitPrice\": 12.99,\n      \"specialInstructions\": \"No onions\",\n      \"modifiers\": [\n        {\n          \"modifierId\": \"modifier-id\",\n          \"quantity\": 1,\n          \"price\": 1.50\n        }\n      ]\n    }\n  ],\n  \"tipAmount\": 5.00,\n  \"specialInstructions\": \"Please call when arriving\"\n}"
            },
            "url": {"raw": "http://localhost:3001/api/v1/orders", "host": ["http://localhost:3001/api/v1"], "path": ["orders"]}
          }
        },
        {
          "name": "Get Orders",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:3001/api/v1/orders", "host": ["http://localhost:3001/api/v1"], "path": ["orders"]}
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:3001/api/v1/orders/:id", "host": ["http://localhost:3001/api/v1"], "path": ["orders", ":id"], "variable": [{"key": "id", "value": "order-id"}]}
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"CONFIRMED\",\n  \"notes\": \"Order confirmed and being prepared\"\n}"
            },
            "url": {"raw": "http://localhost:3001/api/v1/orders/:id/status", "host": ["http://localhost:3001/api/v1"], "path": ["orders", ":id", "status"], "variable": [{"key": "id", "value": "order-id"}]}
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Process Payment",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"order-id\",\n  \"amount\": 49.99,\n  \"paymentMethod\": \"CREDIT_CARD\",\n  \"cardNumber\": \"4111111111111111\",\n  \"expiryMonth\": \"12\",\n  \"expiryYear\": \"2025\",\n  \"cvv\": \"123\"\n}"
            },
            "url": {"raw": "http://localhost:3001/api/v1/payments/charge", "host": ["http://localhost:3001/api/v1"], "path": ["payments", "charge"]}
          }
        },
        {
          "name": "Refund Payment",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentId\": \"payment-id\",\n  \"amount\": 10.00,\n  \"reason\": \"Customer request\"\n}"
            },
            "url": {"raw": "http://localhost:3001/api/v1/payments/refund", "host": ["http://localhost:3001/api/v1"], "path": ["payments", "refund"]}
          }
        }
      ]
    },
    {
      "name": "Loyalty",
      "item": [
        {
          "name": "Get Loyalty Account",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:3001/api/v1/loyalty/account", "host": ["http://localhost:3001/api/v1"], "path": ["loyalty", "account"]}
          }
        },
        {
          "name": "Earn Points",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"order-id\",\n  \"orderAmount\": 50.00\n}"
            },
            "url": {"raw": "http://localhost:3001/api/v1/loyalty/earn", "host": ["http://localhost:3001/api/v1"], "path": ["loyalty", "earn"]}
          }
        },
        {
          "name": "Redeem Points",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"order-id\",\n  \"points\": 250\n}"
            },
            "url": {"raw": "http://localhost:3001/api/v1/loyalty/redeem", "host": ["http://localhost:3001/api/v1"], "path": ["loyalty", "redeem"]}
          }
        },
        {
          "name": "Get Transactions",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:3001/api/v1/loyalty/transactions", "host": ["http://localhost:3001/api/v1"], "path": ["loyalty", "transactions"]}
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:3001/api/v1/users/profile", "host": ["http://localhost:3001/api/v1"], "path": ["users", "profile"]}
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phone\": \"+1234567890\"\n}"
            },
            "url": {"raw": "http://localhost:3001/api/v1/users/profile", "host": ["http://localhost:3001/api/v1"], "path": ["users", "profile"]}
          }
        },
        {
          "name": "Get Addresses",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:3001/api/v1/users/addresses", "host": ["http://localhost:3001/api/v1"], "path": ["users", "addresses"]}
          }
        }
      ]
    },
    {
      "name": "Locations",
      "item": [
        {
          "name": "Get Locations",
          "request": {
            "method": "GET",
            "url": {"raw": "http://localhost:3001/api/v1/locations", "host": ["http://localhost:3001/api/v1"], "path": ["locations"]}
          }
        },
        {
          "name": "Get Location by ID",
          "request": {
            "method": "GET",
            "url": {"raw": "http://localhost:3001/api/v1/locations/:id", "host": ["http://localhost:3001/api/v1"], "path": ["locations", ":id"], "variable": [{"key": "id", "value": "location-id"}]}
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:3001/health", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["health"]}
      }
    }
  ]
}

